{
    "name": "@papit/root",
    "version": "0.0.0",
    "description": "A ecosystem designed to be generic and easy to extend. Intended use for creating packages in a monorepo setup",
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/onkelhoy/papit.git"
    },
    "scripts": {
        "analyse": "to come",
        "publish": "to come",
        "prebuild": "node bin/prebuild.mjs",
        "clean": "node bin/clean.mjs",
        "build": "npx @papit/build",
        "test": "node bin/test.mjs",
        "create": "npm create @papit -- --package",
        "start": "npx @papit/server --serve --info"
    },
    "keywords": [
        "typescript"
    ],
    "packageManager": "npm@11.6.2",
    "engines": {
        "node": ">=20"
    },
    "author": "Henry Pap",
    "license": "LicenseRef-Papit-1.0",
    "workspaces": [
        "packages/**/*",
        "!packages/**/asset/**"
    ],
    "devDependencies": {
        "@microsoft/api-extractor": "7.55.2",
        "esbuild": "0.27.2",
        "typescript": "5.9.3",
        "@papit/arguments": "0.0.1",
        "@papit/terminal": "0.0.1",
        "@papit/information": "0.0.1",
        "@papit/build": "0.0.1",
        "@papit/server": "0.0.1",
        "@papit/create": "0.0.1",
        "@papit/version": "0.0.1"
    },
    "papit": {
        "htmlprefix": "pap"
    }
}