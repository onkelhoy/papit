{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "CREATE - debugger",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["create", "@papit"],
      "env": {
        "NODE_OPTIONS": "--enable-source-maps"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "BUILD - debugger",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "build"],
      "env": {
        "NODE_OPTIONS": "--enable-source-maps"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "SERVER - debugger",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["start"],
      "env": {
        "NODE_OPTIONS": "--enable-source-maps"
      },
      "console": "integratedTerminal"
    }
  ]
}