{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "lib": [
      "es2022"
    ],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "outDir": "lib",
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./",
    "allowJs": true,
    "declarationDir": "lib/types",
    "declaration": true,
    "incremental": true,
    "resolveJsonModule": true,
    "tsBuildInfoFile": ".temp/build/tsconfig.tsbuildinfo",
    "baseUrl": "src",
    "paths": {
      "@papit/arguments": [
        "./index"
      ],
    }
  },
  "include": [
    "src",
    "tests"
  ]
}